      }
    }
  },
  "componentMappings": {
    "loanCalculator": {
      "card": "Card",
      "button": "Button",
      "input": "Input",
      "label": "Label",
      "badge": "Badge",
      "table": "Table",
      "progress": "Progress",
      "alert": "Alert",
      "tooltip": "Tooltip"
    },
    "financialComponents": {
      "emiCard": {
        "component": "Card",
        "variants": {
          "default": "border-border bg-card text-card-foreground",
          "highlighted": "border-accent bg-card text-card-foreground shadow-lg"
        }
      },
      "calculateButton": {
        "component": "Button",
        "variant": "default",
        "className": "bg-accent text-accent-foreground hover:bg-accent/90"
      },
      "savingsAlert": {
        "component": "Alert",
        "variant": "default",
        "className": "border-chart-3 bg-chart-3/10 text-chart-3-foreground"
      },
      "interestBadge": {
        "component": "Badge",
        "variant": "destructive",
        "className": "bg-destructive text-destructive-foreground"
      },
      "statusBadge": {
        "component": "Badge",
        "variants": {
          "approved": "bg-chart-3 text-chart-3-foreground",
          "pending": "bg-chart-2 text-chart-2-foreground",
          "rejected": "bg-destructive text-destructive-foreground"
        }
      }
    }
  },
  "customComponents": {
    "EMIChart": {
      "description": "Pie chart for principal vs interest breakdown",
      "colors": {
        "principal": "hsl(var(--chart-1))",
        "interest": "hsl(var(--chart-2))",
        "savings": "hsl(var(--chart-3))"
      }
    },
    "LoanTable": {
      "description": "Amortization schedule table",
      "styling": {
        "header": "bg-muted text-muted-foreground",
        "row": "border-b border-border",
        "alternateRow": "bg-muted/50"
      }
    },
    "InterestSavingsCard": {
      "description": "Highlight savings from prepayments",
      "styling": {
        "container": "border-chart-3 bg-chart-3/10 text-foreground",
        "title": "text-chart-3 font-semibold",
        "amount": "text-chart-3 text-2xl font-bold"
      }
    }
  },
  "usage": {
    "installation": {
      "steps": [
        "npx shadcn-ui@latest init",
        "Copy the CSS variables to your globals.css",
        "Update your tailwind.config.js with the extended theme",
        "Install required components: npx shadcn-ui@latest add button card input label badge table progress alert tooltip"
      ]
    },
    "examples": {
      "basicEMICard": {
        "jsx": "<Card className=\"p-6\"><CardHeader><CardTitle>EMI Calculator</CardTitle></CardHeader><CardContent><div className=\"space-y-4\"><div><Label htmlFor=\"amount\">Loan Amount</Label><Input id=\"amount\" placeholder=\"Enter amount\" /></div><Button className=\"w-full\">Calculate EMI</Button></div></CardContent></Card>"
      },
      "savingsAlert": {
        "jsx": "<Alert className=\"border-chart-3 bg-chart-3/10\"><AlertDescription>You can save ₹15,000 in interest with a prepayment of ₹50,000</AlertDescription></Alert>"
      },
      "statusBadge": {
        "jsx": "<Badge className=\"bg-chart-3 text-chart-3-foreground\">Loan Approved</Badge>"
      }
    }
  },
  "notes": {
    "compatibility": "This configuration is fully compatible with shadcn/ui v0.8.0+",
    "colorSystem": "Uses HSL color space as required by shadcn",
    "customization": "All colors can be customized by modifying the CSS variables",
    "charts": "Chart colors are mapped to your financial data visualization needs"
  }
}
